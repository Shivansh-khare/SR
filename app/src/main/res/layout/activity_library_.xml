<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Library_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_curr_stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_status"
            android:textColor="#000000"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_curr_disc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="@string/check_your_current_issued_books_there_submition_date_and_shows_your_total_fine_till_date"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_book"
            android:textColor="#000000"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_search_disc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="@string/search_for_current_books_in_library_for_every_field_of_interests_you_will_find_books"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/tv_br"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_a_book"
            android:textColor="#000000"
            android:clickable="true"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textSize="18sp"
            android:focusable="true" />
        <TextView
            android:id="@+id/tv_br_disc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:clickable="true"
            android:text="@string/you_can_request_a_book_if_it_is_not_available_in_library_and_it_will_be_purchased_if_remand_increases"
            android:textSize="12sp"
            android:focusable="true" />


        <TextView
            android:id="@+id/tv_faq2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faq_s"
            android:textColor="#000000"

            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_faq_disc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="@string/read_frequentyly_asked_questions_and_there_answers_by_library_staff_ask_your_queries_doubts_and_share_suggestions"
            android:textSize="12sp" />


    </LinearLayout>
</ScrollView>